<div class="row">
	<div class="col-md-9">
		
<h1 align="center">Companias</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
    </tr>
  </thead>
  <% @companies.each do |company|%>
  <tbody>
    <tr>
      <th scope="row"><%=company.id %></th>
      <td><%=link_to company.name, user_company_path(@user, company)  %></td>
      <td><%= company.description %></td>
      <td>@mdo</td>
    </tr>
  </tbody>
  <% end  %>
</table>

	</div>
	        <div class="col-md-3">
          <div class="well sidebar-nav">
            <div class="round-image-50 text-center"><%= image_tag(current_user.avatar.url(:thumb)) %></div>
            <ul class="nav nav-list">
              <li class="nav-header">Sidebar</li>
              <li><%= link_to "Link1", "#"  %></li>
              <li><%= link_to "Link2", "#"  %></li>
              <li><%= link_to "Link3", "#"  %></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->


</div>
